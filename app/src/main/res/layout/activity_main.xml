<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#E5E5E5"
  tools:context=".MainActivity">

  <easy.peasy.cardview.widget.CardView
    android:id="@+id/cardView1"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="@dimen/cornerRadius"
    app:cardElevation="8dp"
    app:cardShadowStartColor="#BEE3DB"
    app:layout_constraintBottom_toTopOf="@+id/cardView3"
    app:layout_constraintEnd_toStartOf="@+id/cardView0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_chainStyle="spread">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:text="@string/number1"
      android:textColor="#555B6E"
      android:textSize="24sp"
      android:textStyle="bold" />
  </easy.peasy.cardview.widget.CardView>

  <easy.peasy.cardview.widget.CardView
    android:id="@+id/cardView0"
    android:layout_width="110dp"
    android:layout_height="150dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="@dimen/cornerRadius"
    app:cardElevation="8dp"
    app:cardShadowStartColor="#80000000"
    app:layout_constraintBottom_toBottomOf="@+id/cardView1"
    app:layout_constraintEnd_toStartOf="@id/cardView2"
    app:layout_constraintStart_toEndOf="@id/cardView1"
    app:layout_constraintTop_toTopOf="@+id/cardView1" />

  <easy.peasy.cardview.widget.CardView
    android:id="@+id/cardView2"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="@dimen/cornerRadius"
    app:cardElevation="8dp"
    app:cardShadowStartColor="#80D87373"
    app:layout_constraintBottom_toBottomOf="@+id/cardView1"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/cardView0"
    app:layout_constraintTop_toTopOf="@+id/cardView1">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:text="@string/number2"
      android:textColor="#555B6E"
      android:textSize="24sp"
      android:textStyle="bold" />
  </easy.peasy.cardview.widget.CardView>

  <easy.peasy.cardview.widget.CardView
    android:id="@+id/cardView3"
    android:layout_width="260dp"
    android:layout_height="150dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundEndColor="#89B0AE"
    app:cardBackgroundStartColor="#BEE3DB"
    app:cardCornerRadius="@dimen/cornerRadius"
    app:cardElevation="8dp"
    app:cardShadowStartColor="#BFFEC89A"
    app:layout_constraintBottom_toTopOf="@id/cardView4"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/cardView1">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:text="@string/button"
      android:textColor="#FFFFFF"
      android:textSize="24sp" />
  </easy.peasy.cardview.widget.CardView>

  <easy.peasy.cardview.widget.CardView
    android:id="@+id/cardView4"
    android:layout_width="260dp"
    android:layout_height="150dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundEndColor="#F4978E"
    app:cardBackgroundStartColor="#FEC89A"
    app:cardCornerRadius="@dimen/cornerRadius"
    app:cardElevation="8dp"
    app:cardShadowStartColor="#BFFEC89A"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/cardView3">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="top|center"
      android:layout_marginTop="12dp"
      android:text="@string/button"
      android:textColor="#555B6E"
      android:textSize="24sp" />
  </easy.peasy.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
